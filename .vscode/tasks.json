{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Mobile: Run Staging",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--flavor",
				"staging",
				"--dart-define=FLAVOR=staging"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/mobile"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Mobile: Run Production",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--flavor",
				"production",
				"--dart-define=FLAVOR=production"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/mobile"
			},
			"group": "build"
		},
		{
			"label": "Dashboard: Run Web",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"chrome"
			],
			"options": {
				"cwd": "${workspaceFolder}/apps/dashboard"
			},
			"group": "build"
		},
		{
			"label": "Firebase: Deploy Staging",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"firebase use sharedance-staging && firebase deploy --only functions"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend/functions"
			},
			"group": "build"
		},
		{
			"label": "Firebase: Deploy Production",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"firebase use sharedance-production && firebase deploy --only functions"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend/functions"
			},
			"group": "build"
		},
		{
			"label": "Backend: Start Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend/server"
			},
			"group": "build",
			"isBackground": true
		},
		{
			"label": "Setup: Install All Dependencies",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"cd packages/shared_models && flutter pub get && cd ../shared_services && flutter pub get && cd ../shared_constants && flutter pub get && cd ../../apps/mobile && flutter pub get && cd ../dashboard && flutter pub get && cd ../../backend/functions && npm install && cd ../server && npm install"
			],
			"group": "build"
		},
		{
			"label": "Shared: Build Models",
			"type": "shell",
			"command": "flutter",
			"args": [
				"packages",
				"pub",
				"run",
				"build_runner",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/shared_models"
			},
			"group": "build"
		}
	]
}