{
    "apps": [
        {
            "name": "sharedance-staging",
            "script": "index.js",
            "instances": 1,
            "exec_mode": "cluster",
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "staging",
                "PORT": 3001,
                "FIREBASE_PROJECT_ID": "sharedance-staging",
                "FIREBASE_SERVICE_ACCOUNT_PATH": "./serviceAccount-staging.json",
                "FRONTEND_URL": "https://staging.sharedance.com.ar"
            },
            "log_file": "./logs/staging-combined.log",
            "out_file": "./logs/staging-out.log",
            "error_file": "./logs/staging-error.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
            "merge_logs": true,
            "time": true,
            "autorestart": true,
            "max_restarts": 10,
            "min_uptime": "10s",
            "restart_delay": 4000
        },
        {
            "name": "sharedance-production",
            "script": "index.js",
            "instances": 1,
            "exec_mode": "cluster",
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3002,
                "FIREBASE_PROJECT_ID": "sharedance-production",
                "FIREBASE_SERVICE_ACCOUNT_PATH": "./serviceAccount-production.json",
                "FRONTEND_URL": "https://sharedance.com.ar"
            },
            "log_file": "./logs/production-combined.log",
            "out_file": "./logs/production-out.log",
            "error_file": "./logs/production-error.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
            "merge_logs": true,
            "time": true,
            "autorestart": true,
            "max_restarts": 10,
            "min_uptime": "10s",
            "restart_delay": 4000
        }
    ]
}